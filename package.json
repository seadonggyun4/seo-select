{
  "name": "seo-select",
  "version": "2.0.9",
  "description": "A customizable and accessible select component with search functionality built with Lit",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./components/seo-select": {
      "types": "./src/components/seo-select/index.ts",
      "import": "./src/components/seo-select/index.ts"
    },
    "./components/seo-select-search": {
      "types": "./src/components/seo-select-search/index.ts",
      "import": "./src/components/seo-select-search/index.ts"
    },
    "./event": {
      "types": "./src/event/index.ts",
      "import": "./src/event/index.ts"
    }
  },
  "files": [
    "src/**/*",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "lit",
    "web-components",
    "select",
    "dropdown",
    "search",
    "accessible",
    "virtual-scroll",
    "typescript",
    "react",
    "vue",
    "angular"
  ],
  "author": "seo dong gyun <seadonggyun@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/seadonggyun4/seo-select"
  },
  "bugs": {
    "url": "https://github.com/seadonggyun4/seo-select/issues"
  },
  "homepage": "https://seo-select.netlify.app/",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && vite build --mode production",
    "build:docs": "node scripts/build-docs.js",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "build:check": "tsc -p tsconfig.build.json --noEmit",

    "release": "bash scripts/release.sh",
    "release:patch": "npm version patch && bash scripts/release.sh v$(node -p \"require('./package.json').version\")",
    "release:minor": "npm version minor && bash scripts/release.sh v$(node -p \"require('./package.json').version\")",
    "release:major": "npm version major && bash scripts/release.sh v$(node -p \"require('./package.json').version\")",
    
    "dev": "vite",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "sass": "^1.89.2",
    "typescript": "~5.8.3",
    "vite": "^7.0.6",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-lib-inject-css": "^2.1.1",
    "fs-extra": "^11.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
